<?xml version="1.0" encoding="UTF-8"?>

<configuration status="OFF">
  <appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %M:%L - %ex - %X - %msg%n"/>
    </Console>
  </appenders>
  <loggers>
  	<logger name="edu.teco.dnd" level="ALL" additivity="false">
      <appender-ref ref="Console"/>
    </logger>
    <root level="INFO">
      <appender-ref ref="Console"/>
    </root>
  </loggers>
</configuration>
