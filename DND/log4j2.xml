<?xml version="1.0" encoding="UTF-8"?>

<configuration status="OFF">
  <appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %M:%L - %ex - %msg%n"/>
    </Console>
    <File name="Logfile" fileName="log.txt" append="false">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %M:%L - %ex - %msg%n"/>
    </File>
  </appenders>
  <loggers>
    <logger name="edu.teco.dnd" level="WARN"/>
    <root level="WARN">
      <appender-ref ref="Console"/>
      <appender-ref ref="Logfile"/>
    </root>
  </loggers>
</configuration>
